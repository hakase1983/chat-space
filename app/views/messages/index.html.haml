.wrapper
  = render 'layouts/left-side'
                             
  .chat-main
    .main-header
      .left-header
        .left-header_title
          = @group.name
        %ul.left-header_members
          Member:
          %li.member
            - @group.users.each do |group_user|
              =group_user.name
      = link_to edit_group_path(@group.id) do
        .right-header-btn{"data-turbolinks": "false"}
          Edit
          
          
    .messages
      =render @messages
      
    .form
      = form_for [@group, @message],html:{class:'form_message'}do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
        
            




      


